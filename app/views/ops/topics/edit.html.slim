- model_scope = 'activerecord.attributes.topic'

= turbo_frame_tag @topic, class: 'col-md-6'
  .card.card-flush
    = simple_form_for @topic, html: { class: 'card-header' } do |f|
      .card-title.w-75
        .row.align-items-center.w-100
          .col
            = f.text_field :name, class: 'form-control form-control-solid', placeholder: t('placeholders.topic_name')
      .card-toolbar
        = link_to :back, class: 'btn btn-light btn-active-light-secondary me-2'
          i.fa-solid.fa-arrow-left
        = button_tag class: 'btn btn-primary' do
          i.fa-solid.fa-check
